<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="fazland_elastica.elastica_to_model_transformer.collection.class">Fazland\ElasticaBundle\Transformer\ElasticaToModelTransformerCollection</parameter>
    </parameters>

    <services>
        <service id="fazland_elastica.model_to_elastica_transformer" class="Fazland\ElasticaBundle\Transformer\ModelToElasticaAutoTransformer" public="false" abstract="true">
            <argument />
            <argument type="collection" /> <!-- options -->
            <argument type="service" id="event_dispatcher" />
            <call method="setPropertyAccessor">
                <argument type="service" id="fazland_elastica.property_accessor" />
            </call>
        </service>

        <service id="fazland_elastica.model_to_elastica_identifier_transformer" class="Fazland\ElasticaBundle\Transformer\ModelToElasticaIdentifierTransformer" public="false" abstract="true">
            <argument />
            <argument type="collection" /> <!-- options -->
            <call method="setPropertyAccessor">
                <argument type="service" id="fazland_elastica.property_accessor" />
            </call>
        </service>

        <service id="fazland_elastica.doctrine.model_to_elastica_transformer" parent="fazland_elastica.model_to_elastica_transformer"
                 class="Fazland\ElasticaBundle\Transformer\Doctrine\ModelToElasticaAutoTransformer" public="false" abstract="true">
        </service>
        <service id="fazland_elastica.doctrine.model_to_elastica_identifier_transformer" parent="fazland_elastica.model_to_elastica_identifier_transformer"
                 class="Fazland\ElasticaBundle\Transformer\Doctrine\ModelToElasticaIdentifierTransformer" public="false" abstract="true">
        </service>

        <service id="fazland_elastica.elastica_to_model_transformer.collection" class="%fazland_elastica.elastica_to_model_transformer.collection.class%" public="true" abstract="true">
            <argument type="collection" /> <!-- transformers -->
        </service>
    </services>
</container>
